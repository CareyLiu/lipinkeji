<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app_lipin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142pt"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="设备说明"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84pt">

        <RelativeLayout
            android:id="@+id/rl_fengnuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_fengnuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="风暖加热器"
                android:textColor="#ff00ffff"
                android:textSize="31pt" />


            <View
                android:id="@+id/tv_fengnuan_view"
                android:layout_width="123pt"
                android:layout_height="8pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#ff00ffff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shuinuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_shuinuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="水暖加热器"
                android:textColor="#ffffffff"
                android:textSize="31pt" />

            <View
                android:id="@+id/tv_shuinuan_view"
                android:layout_width="123pt"
                android:layout_height="8pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffffff" />
        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_fengnuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/youjiate_shuomingshu_fengnuan" />

            <ImageView
                android:id="@+id/iv_shuinuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/youjiate_shuomingshu_shuinuan" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>