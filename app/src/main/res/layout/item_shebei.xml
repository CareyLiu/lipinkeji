<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10pt"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190pt"
        android:layout_marginHorizontal="29pt"
        android:background="@mipmap/sblb_kuang"
        android:paddingHorizontal="48pt">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33pt"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="风暖加热器"
                    android:textColor="@color/color_main"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7pt"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="使用中"
                    android:textColor="@color/color_main_fu"
                    android:textSize="17pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_youxiaoqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24pt"
                android:layout_marginBottom="24pt"
                android:includeFontPadding="false"
                android:text="有效期：2021-05-25"
                android:textColor="@color/color_main"
                android:textSize="23pt" />


            <TextView
                android:id="@+id/tv_ccid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="设备码：0000014555a"
                android:textColor="@color/white"
                android:textSize="23pt" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_share_icon"
            android:layout_width="122pt"
            android:layout_height="19pt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35pt"
            android:layout_marginRight="64pt"
            android:src="@mipmap/gongxiangshebei" />

        <TextView
            android:id="@+id/tv_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24pt"
            android:includeFontPadding="false"
            android:text="共享设备"
            android:textColor="@color/color_main_fu"
            android:textSize="23pt" />
    </RelativeLayout>
</LinearLayout>