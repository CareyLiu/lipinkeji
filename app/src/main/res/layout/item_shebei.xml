<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="38pt"
    android:layout_marginRight="20pt"
    android:background="@drawable/bg_white_radius_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19pt"
            android:layout_marginTop="19pt"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_share_icon"
                android:layout_width="33pt"
                android:layout_height="33pt"
                android:layout_marginRight="1pt"
                android:src="@mipmap/youjaite_gongxiangshebei" />

            <TextView
                android:id="@+id/tv_share_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="共享设备"
                android:textColor="@color/shebei_share_sel"
                android:textSize="27pt" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="92pt"
            android:layout_height="92pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="19pt"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10pt"
            android:includeFontPadding="false"
            android:text="风暖加热器"
            android:textColor="@color/text_color_3"
            android:textSize="27pt" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="81pt"
            android:layout_height="29pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18pt"
            android:background="@drawable/bg_shebei_shiyong_sel"
            android:gravity="center"
            android:text="使用中"
            android:textColor="@color/white"
            android:textSize="15pt" />

        <TextView
            android:id="@+id/tv_youxiaoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18pt"
            android:includeFontPadding="false"
            android:text="设备有效期至：2020-12-12 10:10:10"
            android:textSize="17pt" />

        <TextView
            android:id="@+id/tv_ccid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18pt"
            android:layout_marginTop="9pt"
            android:layout_marginBottom="13pt"
            android:includeFontPadding="false"
            android:text="ccid：123456789012345678901234"
            android:textSize="17pt" />
    </LinearLayout>
</LinearLayout>