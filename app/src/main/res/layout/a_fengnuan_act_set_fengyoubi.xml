<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sn_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138pt"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="88pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/back_white" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="风油比参数"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154pt"
        android:layout_marginHorizontal="29pt"
        android:layout_marginTop="20pt"
        android:background="@mipmap/wd_kuang"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/iv_daqiya_shuoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15pt"
            android:gravity="center_vertical"
            android:paddingHorizontal="19pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5pt"
                android:includeFontPadding="false"
                android:text="大气压参数"
                android:textColor="@color/white"
                android:textSize="27pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10pt"
                android:includeFontPadding="false"
                android:text="请选择50kPa至100kPa之间的数值"
                android:textColor="@color/white"
                android:textSize="17pt" />

            <ImageView
                android:layout_width="23pt"
                android:layout_height="23pt"
                android:src="@mipmap/daqiyacanshu_shuoming" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar_daqiya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10pt"
            android:background="@color/transparent"
            android:max="100"
            android:maxHeight="12pt"
            android:min="50"
            android:minHeight="12pt"
            android:progress="1"
            android:progressDrawable="@drawable/seekbar_img"
            android:secondaryProgress="100"
            android:thumb="@mipmap/huankuaianniu" />

        <TextView
            android:id="@+id/tv_daqiya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="50kPa"
            android:textColor="@color/white"
            android:textSize="17pt" />
    </LinearLayout>
</LinearLayout>
