<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138pt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="88pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/back_white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="设备解绑"
                android:textColor="@color/white"
                android:textSize="33pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96pt"
        android:layout_marginHorizontal="36pt"
        android:layout_marginTop="36pt"
        android:background="@mipmap/falaer_set_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36pt"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="设备码"
            android:textColor="@color/white"
            android:textSize="33pt" />

        <TextView
            android:id="@+id/tv_shebeima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="36pt"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="33pt" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36pt"
        android:layout_marginTop="36pt"
        android:layout_marginBottom="36pt"
        android:includeFontPadding="false"
        android:text="手机验证"
        android:textColor="@color/white"
        android:textSize="33pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96pt"
        android:layout_marginHorizontal="36pt"
        android:background="@mipmap/falaer_set_bg"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:paddingLeft="36pt"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="33pt" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="36pt"
            android:paddingRight="36pt"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="30pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jiebang"
        android:layout_width="match_parent"
        android:layout_height="96pt"
        android:layout_marginHorizontal="36pt"
        android:layout_marginTop="36pt"
        android:background="@mipmap/falaer_set_bg"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="解绑"
            android:textColor="@color/white"
            android:textSize="33pt"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>