<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="480pt"
        android:layout_height="wrap_content"
        android:background="@mipmap/sn_tkbg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35pt"
            android:layout_marginBottom="20pt"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="35pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10pt"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="高级设置需输入密码"
            android:textColor="@color/white"
            android:textSize="27pt" />

        <EditText
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="58pt"
            android:layout_marginHorizontal="48pt"
            android:layout_marginBottom="30pt"
            android:background="#1A243F"
            android:gravity="left|center_vertical"
            android:hint="请输入密码"
            android:maxLines="1"
            android:paddingHorizontal="10pt"
            android:textColor="@color/white"
            android:textColorHint="#444444"
            android:textSize="23pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48pt"
            android:layout_marginBottom="35pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="173pt"
                android:layout_height="58pt"
                android:background="@drawable/bt_jiareqi_mima_confirm"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="173pt"
                android:layout_height="58pt"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_jiareqi_mima_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="#444444"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
