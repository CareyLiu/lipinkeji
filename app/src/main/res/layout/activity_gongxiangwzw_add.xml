<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yjt_sn_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="80pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="33pt"
                    android:layout_height="33pt"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/back_white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="共享成员"
                android:textColor="@color/yjt_text_nor"
                android:textSize="33pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129pt"
        android:layout_marginHorizontal="19pt"
        android:layout_marginTop="14pt"
        android:background="@mipmap/yjt_shezhi_kuang"
        android:gravity="center_vertical"
        android:paddingLeft="38pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增成员手机号"
            android:textColor="@color/yjt_text_nor"
            android:textSize="33pt" />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请输入手机号"
            android:paddingRight="28pt"
            android:textColor="@color/yjt_text_nor"
            android:textColorHint="@color/yjt_text_nor"
            android:textSize="33pt" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="36pt"
        android:layout_marginLeft="20pt"
        android:includeFontPadding="false"
        android:text="手机验证"
        android:textColor="@color/yjt_text_nor"
        android:textSize="33pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129pt"
        android:layout_marginHorizontal="19pt"
        android:background="@mipmap/yjt_shezhi_kuang"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:paddingLeft="36pt"
            android:textColor="@color/yjt_text_nor"
            android:textColorHint="@color/yjt_text_nor"
            android:textSize="33pt" />

        <TextView
            android:id="@+id/tv_send_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="36pt"
            android:paddingRight="36pt"
            android:text="获取验证码"
            android:textColor="@color/yjt_text_nor"
            android:textSize="33pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jiebang"
        android:layout_width="match_parent"
        android:layout_height="129pt"
        android:layout_marginHorizontal="19pt"
        android:layout_marginTop="14pt"
        android:background="@mipmap/yjt_shezhi_kuang"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/yjt_text_nor"
            android:textSize="33pt"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
