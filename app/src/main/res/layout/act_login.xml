<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_icon"
        android:layout_width="144pt"
        android:layout_height="144pt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/logi_icon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45pt"
        android:includeFontPadding="false"
        android:text="优佳特"
        android:textColor="@color/text_blue"
        android:textSize="35pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="84pt"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="67pt"
        android:textColor="@color/text_blue_80"
        android:textColorHint="@color/text_blue_80"
        android:textSize="29pt" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4pt"
        android:layout_below="@+id/ed_phone"
        android:layout_marginLeft="50pt"
        android:layout_marginRight="10pt"
        android:scaleType="fitXY"
        android:src="@mipmap/denglu_shurukuang" />

    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:layout_below="@+id/ed_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:paddingLeft="67pt"
        android:paddingRight="90pt">

        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_blue_80"
            android:textColorHint="@color/text_blue_80"
            android:textSize="29pt" />

        <TextView
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5pt"
            android:text="获取验证码"
            android:textColor="@color/text_blue_80"
            android:textSize="29pt" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4pt"
        android:layout_below="@+id/ll_pwd"
        android:layout_marginLeft="50pt"
        android:layout_marginRight="10pt"
        android:scaleType="fitXY"
        android:src="@mipmap/denglu_shurukuang" />


    <LinearLayout
        android:id="@+id/ll_qiehuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pwd"
        android:layout_marginLeft="68pt"
        android:layout_marginTop="30pt"
        android:layout_marginRight="101pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5pt"
            android:text="切换登录方式"
            android:textColor="#FF9600"
            android:textSize="23pt" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_zhaohui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5pt"
            android:text="找回密码"
            android:textColor="#FF9600"
            android:textSize="23pt" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:layout_below="@+id/ll_qiehuan"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="42pt"
        android:layout_marginTop="60dp"
        android:background="@mipmap/denglu"
        android:maxLines="1"
        android:text="注册/登录"
        android:textColor="@color/text_blue"
        android:textSize="30pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_tongyi"
            android:gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="30dp">
            <ImageView
                android:scaleType="centerInside"
                android:padding="10dp"
                android:id="@+id/iv_tongyi"
                android:layout_width="15dp"
                android:layout_height="15dp">

            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yinsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="《隐私保护声明》"
            android:textColor="@color/text_blue"
            android:textSize="19pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="和"
            android:textColor="@color/text_blue"
            android:textSize="19pt" />

        <TextView
            android:id="@+id/tv_yonghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="《用户使用协议》"
            android:textColor="@color/text_blue"
            android:textSize="19pt" />
    </LinearLayout>
</RelativeLayout>





