<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="142pt"
        android:background="@color/app_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="88pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/back_white" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="后台服务设置主机参数"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="火焰传感器类型"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_huoyan_redianou"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="热电偶"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_huoyan_pt1000"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="PT1000"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />


                    <TextView
                        android:id="@+id/tv_huoyan_neizu"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="内阻"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_huoyan_wu"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="无"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="进气温度传感器"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_jinqi_ntc"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="NTC50K"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_jinqi_pt1000"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="PT1000"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_jinqi_guanbi"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="关闭"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="霍尔传感器"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_huoer_2"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="2对级"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_huoer_1"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="1对级"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_huoer_wu"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="无极"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="机器功率"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_gonglv_2kw"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="2kw"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_gonglv_5kw"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="5kw"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_gonglv_zidignyi"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="自定义"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="大风大油（关机除碳）"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_fengyou_wu"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="无(默认)"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_fengyou_you"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="有"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="点火塞恒温控制"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_dianhuosai_wu"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="无(默认)"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_dianhuosai_you"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="有"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="机壳温度传感器"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_jikewendu_ntc"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="NTC50K"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_jikewendu_pt1000"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="PT1000"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="19pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5pt"
                        android:includeFontPadding="false"
                        android:text="过温降油温度值"
                        android:textColor="@color/white"
                        android:textSize="29pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10pt"
                        android:includeFontPadding="false"
                        android:text="请选择210℃至300℃之间的数值"
                        android:textColor="@color/white"
                        android:textSize="17pt" />
                </LinearLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10pt"
                    android:background="@color/transparent"
                    android:max="150"
                    android:maxHeight="12pt"
                    android:min="105"
                    android:minHeight="12pt"
                    android:progress="105"
                    android:progressDrawable="@drawable/seekbar_img"
                    android:secondaryProgress="105"
                    android:thumb="@mipmap/huankuaianniu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="210℃"
                    android:textColor="@color/white"
                    android:textSize="17pt" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="19pt">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5pt"
                        android:includeFontPadding="false"
                        android:text="高温报警阈值"
                        android:textColor="@color/white"
                        android:textSize="29pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10pt"
                        android:includeFontPadding="false"
                        android:text="请选择250℃至300℃之间的数值"
                        android:textColor="@color/white"
                        android:textSize="17pt" />
                </LinearLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10pt"
                    android:background="@color/transparent"
                    android:max="150"
                    android:maxHeight="12pt"
                    android:min="125"
                    android:minHeight="12pt"
                    android:progress="105"
                    android:progressDrawable="@drawable/seekbar_img"
                    android:secondaryProgress="105"
                    android:thumb="@mipmap/huankuaianniu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="250℃"
                    android:textColor="@color/white"
                    android:textSize="17pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="20pt"
                android:background="@mipmap/wd_kuang"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15pt"
                    android:includeFontPadding="false"
                    android:text="机器电压类型"
                    android:textColor="@color/white"
                    android:textSize="29pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_dianya_12v"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="12V"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_dianya_14v"
                        android:layout_width="144pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="24V"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />

                    <TextView
                        android:id="@+id/tv_dianya_zidong"
                        android:layout_width="188pt"
                        android:layout_height="58pt"
                        android:layout_marginRight="10pt"
                        android:background="@drawable/jiareqi_selector_days"
                        android:button="@null"
                        android:gravity="center"
                        android:text="自动判断电压"
                        android:textColor="@drawable/jiareqi_selector_days_text"
                        android:textSize="29pt" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bt_save"
                android:layout_width="match_parent"
                android:layout_height="115pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="19pt"
                android:background="#16A3DA"
                android:gravity="center"
                android:text="保存设置"
                android:textColor="@color/white"
                android:textSize="33pt"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50pt" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
