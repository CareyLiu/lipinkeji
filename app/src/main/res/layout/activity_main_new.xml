<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <com.youjiate.cn.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95pt">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#192231"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/shebei" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="设备"
                android:textColor="#0EA9F4"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#192231"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/shuoming_bottom" />

            <TextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:text="说明"
                android:textColor="@color/white"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#192231"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/wd" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="23pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>