<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.youjiate.cn.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95pt"
        android:background="#ffffff">

        <LinearLayout

            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/youjiate_icon_home_sel" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="首页"
                android:textColor="#EC232B"
                android:textSize="23pt" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_shebei"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shebei"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/youjiate_icon_shebei_nor" />

            <TextView

                android:id="@+id/tv_shebei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="设备"
                android:textColor="#1D1D1D"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/ll_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/youjiate_icon_sms_nor" />

            <TextView

                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:text="说明书"
                android:textColor="#1D1D1D"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout

            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/youjiate_icon_wd_nor" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="#1d1d1d"
                android:textSize="23pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>