<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youjiate.cn.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94pt"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="42pt"
                android:layout_height="42pt"
                android:src="@mipmap/jiareqi_shangcheng_sel" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="商城"
                android:textColor="@color/color_42FFEB"
                android:textSize="19pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shebei"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shebei"
                android:layout_width="42pt"
                android:layout_height="42pt"
                android:src="@mipmap/jiareqi_shebei_nor" />

            <TextView
                android:id="@+id/tv_shebei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="设备"
                android:textColor="@color/color_A6A6A6"
                android:textSize="19pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="42pt"
                android:layout_height="42pt"
                android:src="@mipmap/jiareqi_shuoming_nor" />

            <TextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="说明书"
                android:textColor="@color/color_A6A6A6"
                android:textSize="19pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="42pt"
                android:layout_height="42pt"
                android:src="@mipmap/jiareqi_wd_nor" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="@color/color_A6A6A6"
                android:textSize="19pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>