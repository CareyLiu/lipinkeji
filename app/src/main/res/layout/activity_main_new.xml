<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.falaer.cn.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95pt">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/tuya_tab_icon_shouye_sel" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="首页"
                android:textColor="@color/text_color_main"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/tuya_tab_icon_device_nor" />

            <TextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="设备"
                android:textColor="@color/text_color_9"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="52pt"
                android:layout_height="52pt"
                android:src="@mipmap/tuya_tab_icon_mine_nor" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:includeFontPadding="false"
                android:text="我的"
                android:textColor="@color/text_color_9"
                android:textSize="23pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>