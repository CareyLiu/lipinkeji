<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="50pt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88pt">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="88pt"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="33pt"
                android:layout_height="33pt"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="风暖加热器"
            android:textColor="@color/white"
            android:textSize="33pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_set"
            android:layout_width="88pt"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="46pt"
                android:layout_height="46pt"
                android:layout_centerInParent="true"
                android:src="@mipmap/jg_shezhi_icon_white" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="595pt"
                    android:layout_height="557pt"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/jg_home_bg_top" />

                <ImageView
                    android:layout_width="384pt"
                    android:layout_height="288pt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="52pt"
                    android:src="@mipmap/jg_home_pic_kongtiao_nor" />

                <LinearLayout
                    android:id="@+id/ll_shuoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30pt"
                    android:layout_marginTop="20pt"
                    android:gravity="center">

                    <TextView
                        android:layout_width="46pt"
                        android:layout_height="46pt"
                        android:background="@drawable/jinggong_circle_nor"
                        android:gravity="center"
                        android:text="\?"
                        android:textColor="@color/jg_text"
                        android:textSize="35pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8pt"
                        android:includeFontPadding="false"
                        android:text="说明"
                        android:textColor="@color/jg_text"
                        android:textSize="33pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20pt"
                    android:layout_marginRight="30pt"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_xinhao"
                        android:layout_width="46pt"
                        android:layout_height="46pt"
                        android:src="@mipmap/fengnuan_icon_signal_no" />

                    <TextView
                        android:id="@+id/tv_zaixian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8pt"
                        android:includeFontPadding="false"
                        android:text="在线"
                        android:textColor="@color/white"
                        android:textSize="33pt" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="446pt"
                    android:includeFontPadding="false"
                    android:text="驻车加热器"
                    android:textColor="@color/jg_text"
                    android:textSize="44pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="497pt"
                    android:includeFontPadding="false"
                    android:text="温暖相伴•为车为您"
                    android:textColor="@color/jg_text"
                    android:textSize="35pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34pt"
                android:background="@mipmap/jg_dingshi_time_bg">

                <TextView
                    android:id="@+id/tv_dianya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65pt"
                    android:layout_marginTop="20pt"
                    android:includeFontPadding="false"
                    android:text="工作电压：--v"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_chufengkouwendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65pt"
                    android:layout_marginTop="70pt"
                    android:includeFontPadding="false"
                    android:text="出风口温度：--℃"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_danqianwendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="349pt"
                    android:layout_marginTop="20pt"
                    android:includeFontPadding="false"
                    android:text="当前温度：--℃"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_yushe_wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="349pt"
                    android:layout_marginTop="70pt"
                    android:includeFontPadding="false"
                    android:text="预设温度：--℃"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_daqiya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65pt"
                    android:layout_marginTop="120pt"
                    android:includeFontPadding="false"
                    android:text="大气压：(暂无数据)"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_haibagaodu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="349pt"
                    android:layout_marginTop="120pt"
                    android:includeFontPadding="false"
                    android:text="海拔高度：(暂无数据)"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_hanyangliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="170pt"
                    android:layout_marginBottom="20pt"
                    android:includeFontPadding="false"
                    android:text="含氧量：(暂无数据)"
                    android:textColor="@color/white"
                    android:textSize="27pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30pt"
                android:layout_marginTop="20pt">

                <RelativeLayout
                    android:layout_width="134pt"
                    android:layout_height="399pt"
                    android:layout_marginTop="6pt"
                    android:background="@mipmap/jg_home_pic_dangwei_bg">

                    <TextView
                        android:id="@+id/tv_set_dangwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="41pt"
                        android:includeFontPadding="false"
                        android:text="--档"
                        android:textColor="@color/jg_text"
                        android:textSize="29pt" />

                    <View
                        android:id="@+id/dangwei5"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="134pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/dangwei4"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/dangwei5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/dangwei3"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/dangwei4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/dangwei2"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/dangwei3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/dangwei1"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/dangwei2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="134pt"
                    android:layout_height="399pt"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6pt"
                    android:background="@mipmap/jg_home_pic_dangwei_bg_right">

                    <TextView
                        android:id="@+id/tv_set_wendu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="41pt"
                        android:includeFontPadding="false"
                        android:text="--℃"
                        android:textColor="@color/jg_text"
                        android:textSize="29pt" />

                    <View
                        android:id="@+id/wendu1"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_marginLeft="45pt"
                        android:layout_marginTop="100pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/wendu2"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/wendu1"
                        android:layout_marginLeft="45pt"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/wendu3"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/wendu2"
                        android:layout_marginLeft="45pt"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/wendu4"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/wendu3"
                        android:layout_marginLeft="45pt"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/wendu5"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/wendu4"
                        android:layout_marginLeft="45pt"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />

                    <View
                        android:id="@+id/wendu6"
                        android:layout_width="53pt"
                        android:layout_height="21pt"
                        android:layout_below="@+id/wendu5"
                        android:layout_marginLeft="45pt"
                        android:layout_marginTop="17pt"
                        android:background="@drawable/jinggong_dangwei_nor" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_yuanpan"
                    android:layout_width="350pt"
                    android:layout_height="350pt"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/bt_up"
                        android:layout_width="236pt"
                        android:layout_height="127pt"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/jinggong_press_up" />


                    <ImageView
                        android:id="@+id/bt_down"
                        android:layout_width="236pt"
                        android:layout_height="127pt"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/jinggong_press_down" />

                    <ImageView
                        android:id="@+id/bt_on"
                        android:layout_width="127pt"
                        android:layout_height="236pt"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/jg_on_nor" />


                    <ImageView
                        android:id="@+id/bt_off"
                        android:layout_width="127pt"
                        android:layout_height="236pt"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/jg_off_sel" />

                    <ImageView
                        android:id="@+id/bt_bengyou"
                        android:layout_width="98pt"
                        android:layout_height="98pt"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/jg_icon_bengyou_nor" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_mode"
                    android:layout_width="211pt"
                    android:layout_height="81pt"
                    android:layout_below="@+id/rl_yuanpan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="21pt"
                    android:layout_marginBottom="21pt"
                    android:src="@mipmap/jg_home_hengwen_nor" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
