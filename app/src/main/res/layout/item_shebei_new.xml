<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/constrain"
        android:layout_width="match_parent"
        android:layout_height="202pt"
        android:layout_marginHorizontal="19pt"
        android:layout_marginVertical="10pt"
        android:background="@mipmap/sblb_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="名  称"
                android:textColor="@color/color_lipin"
                android:textSize="23pt" />

            <View
                android:layout_width="2pt"
                android:layout_height="13pt"
                android:background="@color/color_lipin" />

            <TextView
                android:layout_width="134pt"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="状  态"
                android:textColor="@color/color_lipin"
                android:textSize="23pt" />

            <View
                android:layout_width="2pt"
                android:layout_height="13pt"
                android:background="@color/color_lipin" />

            <TextView
                android:layout_width="164pt"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="有效期"
                android:textColor="@color/color_lipin"
                android:textSize="23pt" />

            <View
                android:layout_width="2pt"
                android:layout_height="13pt"
                android:background="@color/color_lipin" />

            <TextView
                android:layout_width="164pt"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="设备码"
                android:textColor="@color/color_lipin"
                android:textSize="23pt" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="69pt"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="名  称"
                android:textColor="@color/white"
                android:textSize="23pt" />

            <View
                android:layout_width="2pt"
                android:layout_height="13pt"
                android:background="@color/color_lipin" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="134pt"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="状  态"
                android:textColor="@color/white"
                android:textSize="23pt" />

            <View
                android:layout_width="2pt"
                android:layout_height="13pt"
                android:background="@color/color_lipin" />

            <TextView
                android:id="@+id/tv_youxiaoqi"
                android:layout_width="164pt"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="有效期"
                android:textColor="@color/white"
                android:textSize="23pt" />

            <View
                android:layout_width="2pt"
                android:layout_height="13pt"
                android:background="@color/color_lipin" />

            <TextView
                android:id="@+id/tv_ccid"
                android:layout_width="164pt"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="设备码"
                android:textColor="@color/white"
                android:textSize="23pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83pt"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tv_share_name"
                android:layout_width="146pt"
                android:layout_height="58pt"
                android:layout_marginRight="19pt"
                android:background="@mipmap/sblb_anniu"
                android:gravity="center"
                android:text="共享设备"
                android:textColor="@color/color_lipin"
                android:textSize="23pt" />

            <TextView
                android:layout_width="146pt"
                android:layout_height="58pt"
                android:layout_marginRight="19pt"
                android:background="@mipmap/sblb_anniu"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="23pt" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>