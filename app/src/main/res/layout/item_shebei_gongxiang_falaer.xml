<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146pt"
        android:layout_marginHorizontal="19pt"
        android:layout_marginTop="14pt"
        android:background="@mipmap/yjt_shezhi_kuang"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="61pt"
            android:layout_height="61pt"
            android:layout_marginLeft="43pt"
            android:layout_marginRight="43pt"
            android:src="@mipmap/gongxiangchengyuan_none" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:includeFontPadding="false"
                android:text="姓名"
                android:textColor="@color/yjt_text_nor"
                android:textSize="30pt" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="21pt"
                android:layout_marginTop="19pt"
                android:includeFontPadding="false"
                android:text="15112345678"
                android:textColor="@color/yjt_text_nor"
                android:textSize="21pt" />
        </LinearLayout>

        <ImageView
            android:layout_width="19pt"
            android:layout_height="31pt"
            android:layout_marginRight="43pt"
            android:scaleType="centerCrop"
            android:src="@mipmap/yjt_shezhi_fanhui" />
    </LinearLayout>
</LinearLayout>
