<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sn_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="138pt"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="88pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/back_white" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="装机操作设置权限"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154pt"
        android:layout_marginHorizontal="29pt"
        android:layout_marginTop="20pt"
        android:background="@mipmap/wd_kuang"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="19pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15pt"
            android:includeFontPadding="false"
            android:text="外控装置"
            android:textColor="@color/white"
            android:textSize="27pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_waikong_duankai"
                android:layout_width="144pt"
                android:layout_height="44pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/jiareqi_selector_days"
                android:button="@null"
                android:gravity="center"
                android:text="断开"
                android:textColor="@drawable/jiareqi_selector_days_text"
                android:textSize="27pt" />

            <TextView
                android:id="@+id/tv_waikong_shuchu"
                android:layout_width="144pt"
                android:layout_height="44pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/jiareqi_selector_days"
                android:button="@null"
                android:gravity="center"
                android:text="输出"
                android:textColor="@drawable/jiareqi_selector_days_text"
                android:textSize="27pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
