<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="142pt"
        android:background="@color/app_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="88pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/back_white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="档位切换"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173pt"
        android:layout_marginHorizontal="19pt"
        android:layout_marginTop="20pt"
        android:background="@mipmap/wd_kuang"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="19pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15pt"
            android:includeFontPadding="false"
            android:text="档位切换"
            android:textColor="@color/white"
            android:textSize="29pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dangwei_1dang"
                android:layout_width="144pt"
                android:layout_height="58pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/jiareqi_selector_days"
                android:button="@null"
                android:gravity="center"
                android:text="1挡"
                android:textColor="@drawable/jiareqi_selector_days_text"
                android:textSize="29pt" />

            <TextView
                android:id="@+id/tv_dangwei_2dang"
                android:layout_width="144pt"
                android:layout_height="58pt"
                android:layout_marginRight="10pt"
                android:background="@drawable/jiareqi_selector_days"
                android:button="@null"
                android:gravity="center"
                android:text="2挡"
                android:textColor="@drawable/jiareqi_selector_days_text"
                android:textSize="29pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
