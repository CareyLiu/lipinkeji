<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="480pt"
        android:layout_height="wrap_content"
        android:background="@mipmap/sn_tkbg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35pt"
            android:layout_marginBottom="20pt"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="温度上限设置"
            android:textColor="@color/white"
            android:textSize="35pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30pt"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="温度范围0-35，当前32"
            android:textColor="@color/white"
            android:textSize="27pt" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20pt"
            android:background="@color/transparent"
            android:max="35"
            android:maxHeight="12pt"
            android:min="0"
            android:minHeight="12pt"
            android:progress="20"
            android:progressDrawable="@drawable/seekbar_img"
            android:secondaryProgress="100"
            android:thumb="@mipmap/huankuaianniu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48pt"
            android:layout_marginTop="30pt"
            android:layout_marginBottom="35pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="173pt"
                android:layout_height="58pt"
                android:background="@drawable/bt_jiareqi_mima_confirm"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="173pt"
                android:layout_height="58pt"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_jiareqi_mima_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="#444444"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
