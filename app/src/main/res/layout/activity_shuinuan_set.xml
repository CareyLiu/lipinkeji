<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sn_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88pt"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="88pt"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="33pt"
                android:layout_height="33pt"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="35pt"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_gaojishezhi"
                android:layout_width="match_parent"
                android:layout_height="64pt"
                android:gravity="right|center_vertical"
                android:paddingRight="29pt">


                <ImageView
                    android:layout_width="25pt"
                    android:layout_height="25pt"
                    android:layout_marginRight="10pt"
                    android:src="@mipmap/gaojishezhi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="高级设置"
                    android:textColor="@color/white"
                    android:textSize="27pt" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="设备码"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <TextView
                    android:id="@+id/tv_shebeima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="28pt"
                    android:textColor="@color/white"
                    android:textSize="27pt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_dingshi"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="定时"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_kongtiao_state"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="空调状态"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jiareqicanshu"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="加热器参数"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_zhujicanshu"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="主机参数"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_guzhang"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="加热器诊断"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jiebangshebei"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="解绑设备"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_gongxiang"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="共享成员"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_gongxiang_jie"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="退出共享"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shebeixufei"
                android:layout_width="match_parent"
                android:layout_height="90pt"
                android:layout_marginHorizontal="29pt"
                android:layout_marginTop="19pt"
                android:background="@mipmap/wd_kuang"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19pt"
                    android:includeFontPadding="false"
                    android:text="续费查询"
                    android:textColor="@color/white"
                    android:textSize="27pt" />

                <ImageView
                    android:layout_width="31pt"
                    android:layout_height="31pt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/push_white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50pt" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
