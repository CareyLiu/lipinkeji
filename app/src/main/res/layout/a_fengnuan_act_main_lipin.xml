                            android:id="@+id/iv_jia"
                            android:layout_width="58pt"
                            android:layout_height="58pt"
                            android:layout_marginBottom="3pt"
                            android:src="@mipmap/fn_jia" />

                        <TextView
                            android:id="@+id/tv_jia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加"
                            android:textColor="@color/white"
                            android:textSize="23pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="463pt"
                        android:layout_marginTop="202pt"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_jian"
                            android:layout_width="58pt"
                            android:layout_height="58pt"
                            android:layout_marginBottom="3pt"
                            android:src="@mipmap/fn_jian" />

                        <TextView
                            android:id="@+id/tv_jian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="减"
                            android:textColor="@color/white"
                            android:textSize="23pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
