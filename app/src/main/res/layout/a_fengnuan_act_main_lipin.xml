                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="288pt"
                        android:layout_height="144pt"
                        android:layout_marginLeft="21pt"
                        android:layout_marginTop="133pt"
                        android:src="@mipmap/fn_zs" />

                    <ImageView
                        android:id="@+id/iv_jiareqi"
                        android:layout_width="192pt"
                        android:layout_height="134pt"
                        android:layout_marginLeft="70pt"
                        android:layout_marginTop="60pt" />

                    <LinearLayout
                        android:id="@+id/ll_dingshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60pt"
                        android:layout_marginBottom="25pt"
                        android:gravity="center"
                        android:padding="12pt">

                        <ImageView
                            android:layout_width="25pt"
                            android:layout_height="25pt"
                            android:layout_marginRight="12pt"
                            android:src="@mipmap/fn_icon_dingshi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="定时"
                            android:textColor="@color/white"
                            android:textSize="23pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="25pt"
                        android:layout_toRightOf="@id/ll_dingshi"
                        android:gravity="center"
                        android:padding="12pt">

                        <ImageView
                            android:id="@+id/iv_xinhao"
                            android:layout_width="25pt"
                            android:layout_height="25pt"
                            android:layout_marginRight="12pt"
                            android:src="@mipmap/fengnuan_icon_signal" />

                        <TextView
                            android:id="@+id/tv_xinhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="在线"
                            android:textColor="@color/white"
                            android:textSize="23pt" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="1pt"
                    android:layout_height="283pt"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="37pt"
                        android:layout_marginTop="33pt"
                        android:includeFontPadding="true"
                        android:text="加热器状态"
                        android:textColor="@color/color_lipin"
                        android:textSize="23pt" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30pt"
                        android:layout_marginTop="78pt"
                        android:layout_toLeftOf="@id/id_line"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dianya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0V"
                            android:textColor="@color/white"
                            android:textSize="35pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:includeFontPadding="false"
                            android:text="当前电压"
                            android:textColor="@color/white"
                            android:textSize="20pt" />

                        <TextView
                            android:id="@+id/tv_chufengkouwendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25pt"
                            android:includeFontPadding="false"
                            android:text="0℃"
                            android:textColor="@color/white"
                            android:textSize="35pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:includeFontPadding="false"
                            android:text="出风口温度"
                            android:textColor="@color/white"
                            android:textSize="20pt" />
                    </LinearLayout>

                    <View
                        android:id="@+id/id_line"
                        android:layout_width="1pt"
                        android:layout_height="176pt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="79pt"
                        android:background="@color/white" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="78pt"
                        android:layout_marginRight="30pt"
                        android:layout_toRightOf="@id/id_line"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_huanjingwendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0℃"
                            android:textColor="@color/white"
                            android:textSize="35pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:includeFontPadding="false"
                            android:text="环境温度"
                            android:textColor="@color/white"
                            android:textSize="20pt" />

                        <TextView
                            android:id="@+id/tv_rufengkouwendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25pt"
                            android:includeFontPadding="false"
                            android:text="0℃"
                            android:textColor="@color/white"
                            android:textSize="35pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:includeFontPadding="false"
                            android:text="入风口温度"
                            android:textColor="@color/white"
                            android:textSize="20pt" />
                    </LinearLayout>


                    <TextView
