                android:background="@drawable/bg_fengnuan_radius_10"
                android:gravity="center_vertical"
                android:paddingLeft="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18pt"
                    android:includeFontPadding="false"
                    android:text="工作状态"
                    android:textColor="@color/white"
                    android:textSize="23pt" />

                <View
                    android:layout_width="1pt"
                    android:layout_height="50pt"
                    android:layout_marginRight="18pt"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_dangqianzhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18pt"
                    android:includeFontPadding="false"
                    android:text="加热器增温：3档"
                    android:textColor="@color/white"
                    android:textSize="23pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="19pt"
                android:background="@drawable/bg_fengnuan_radius_10"
                android:gravity="center_vertical"
                android:paddingLeft="19pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18pt"
                    android:includeFontPadding="false"
                    android:text="有效期至"
                    android:textColor="@color/white"
                    android:textSize="23pt" />

                <View
                    android:layout_width="1pt"
                    android:layout_height="50pt"
                    android:layout_marginRight="18pt"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_youxiaoqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18pt"
                    android:includeFontPadding="false"
                    android:text="2022-01-24  17：29：12"
                    android:textColor="@color/white"
                    android:textSize="23pt" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480pt"
                android:layout_marginHorizontal="19pt"
                android:layout_marginTop="19pt"
                android:background="@drawable/bg_fengnuan_radius_10"
                android:gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/fn_anjiandg">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38pt"
                        android:layout_marginTop="124pt"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dangwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5pt"
                            android:includeFontPadding="false"
                            android:text="--档"
                            android:textColor="@color/white"
                            android:textSize="23pt" />

                        <ImageView
                            android:id="@+id/view_dangwei5"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_dangwei4"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_dangwei3"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_dangwei2"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />


                        <ImageView
                            android:id="@+id/view_dangwei1"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="124pt"
                        android:layout_marginRight="38pt"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_wendu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5pt"
                            android:includeFontPadding="false"
                            android:text="--℃"
                            android:textColor="@color/white"
                            android:textSize="23pt" />

                        <ImageView
                            android:id="@+id/view_wendu5"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_wendu4"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_wendu3"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_wendu2"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />

                        <ImageView
                            android:id="@+id/view_wendu1"
                            android:layout_width="77pt"
                            android:layout_height="48pt"
                            android:src="@mipmap/fn_dangkuangdi" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="422pt"
                        android:layout_height="422pt"
