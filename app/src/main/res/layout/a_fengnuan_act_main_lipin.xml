                            android:layout_height="211pt" />

                        <View
                            android:id="@+id/bt2"
                            android:layout_width="211pt"
                            android:layout_height="211pt"
                            android:layout_alignParentRight="true" />

                        <View
                            android:id="@+id/bt3"
                            android:layout_width="211pt"
                            android:layout_height="211pt"
                            android:layout_alignParentBottom="true" />

                        <View
