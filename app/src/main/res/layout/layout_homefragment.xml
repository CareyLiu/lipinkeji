<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122pt"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58pt">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="38pt"
                    android:layout_height="38pt"
                    android:layout_marginLeft="23pt"
                    android:src="@mipmap/home_dingwei" />

                <TextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2pt"
                    android:includeFontPadding="false"
                    android:text="哈尔滨市"
                    android:textColor="@color/white"
                    android:textSize="23pt" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="商城"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cl_1">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                app:srlTextSizeTime="10sp"
                app:srlTextSizeTitle="12sp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="77pt"
                        android:layout_marginHorizontal="29pt"
                        android:layout_marginTop="10pt"
                        android:background="@drawable/sousuo"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25pt"
                            android:layout_height="25pt"
                            android:layout_marginLeft="12pt"
                            android:src="@mipmap/sousuo" />

                        <EditText
                            android:id="@+id/ed_search"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入搜索的内容"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingHorizontal="8pt"
                            android:textColor="#A6A6A6"
                            android:textColorHint="#A6A6A6"
                            android:textSize="23pt" />
                    </LinearLayout>


                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="240pt"
                        android:layout_marginHorizontal="29pt"
                        android:layout_marginTop="10pt" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70pt"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="30pt">

                        <ImageView
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:layout_marginRight="10pt"
                            android:src="@mipmap/zhinengyure" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="智能预热"
                            android:textColor="@color/color_main"
                            android:textSize="27pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10pt"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_fengnuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80pt"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="96pt"
                                android:layout_height="96pt"
                                android:layout_marginBottom="10pt"
                                android:src="@mipmap/youjiate_fengnuan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="风暖"
                                android:textColor="@color/color_main"
                                android:textSize="23pt" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shuinuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80pt"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="96pt"
                                android:layout_height="96pt"
                                android:layout_marginBottom="10pt"
                                android:src="@mipmap/youjaiteshuinuan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="水暖"
                                android:textColor="@color/color_main"
                                android:textSize="23pt" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_kongtiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80pt"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="96pt"
                                android:layout_height="96pt"
                                android:layout_marginBottom="10pt"
                                android:src="@mipmap/youjiate_suanming" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="空调"
                                android:textColor="@color/color_main"
                                android:textSize="23pt" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_gengduo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="96pt"
                                android:layout_height="96pt"
                                android:layout_marginBottom="10pt"
                                android:src="@mipmap/youjiate_geduo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="更多"
                                android:textColor="@color/color_main"
                                android:textSize="23pt" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_shangcheng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="21pt" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20pt" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <ImageView
            android:id="@+id/iv_gouwuche"
            android:layout_width="88pt"
            android:layout_height="88pt"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="30pt"
            android:layout_marginBottom="120pt"
            android:src="@mipmap/youjiate_icon_gouwuche" />
    </FrameLayout>
</LinearLayout>