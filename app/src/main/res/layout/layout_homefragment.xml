<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142pt"
        android:background="@color/black"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88pt">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="38pt"
                    android:layout_height="38pt"
                    android:layout_marginLeft="23pt"
                    android:src="@mipmap/home_dingwei" />

                <TextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2pt"
                    android:includeFontPadding="false"
                    android:text="哈尔滨市"
                    android:textColor="@color/white"
                    android:textSize="23pt" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="力品科技"
                android:textColor="@color/white"
                android:textSize="35pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cl_1">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                app:srlTextSizeTime="10sp"
                app:srlTextSizeTitle="12sp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="77pt"
                        android:layout_marginHorizontal="29pt"
                        android:layout_marginTop="10pt"
                        android:background="@drawable/sousuo"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25pt"
                            android:layout_height="25pt"
                            android:layout_marginLeft="12pt"
                            android:src="@mipmap/sousuo" />

                        <EditText
                            android:id="@+id/ed_search"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入搜索的内容"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingHorizontal="8pt"
                            android:textColor="#A6A6A6"
                            android:textColorHint="#A6A6A6"
                            android:textSize="23pt" />
                    </LinearLayout>


                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="288pt"
                        android:layout_marginHorizontal="29pt"
                        android:layout_marginTop="10pt" />

                    <LinearLayout
                        android:id="@+id/ll_shangcheng"
                        android:layout_width="match_parent"
                        android:layout_height="77pt"
                        android:layout_marginHorizontal="29pt"
                        android:layout_marginTop="19pt"
                        android:background="@mipmap/gnszk_zhong"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20pt">

                        <ImageView
                            android:layout_width="38pt"
                            android:layout_height="38pt"
                            android:layout_marginRight="10pt"
                            android:src="@mipmap/home_shangcheng" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="商城"
                            android:textColor="@color/white"
                            android:textSize="27pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10pt"
                            android:includeFontPadding="false"
                            android:text="查看更多"
                            android:textColor="@color/white"
                            android:textSize="27pt" />

                        <ImageView
                            android:layout_width="12pt"
                            android:layout_height="21pt"
                            android:src="@drawable/white_push" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="192pt"
                        android:layout_marginHorizontal="29pt"
                        android:layout_marginTop="19pt">

                        <RelativeLayout
                            android:id="@+id/ll_fengnuan"
                            android:layout_width="192pt"
                            android:layout_height="192pt"
                            android:background="@mipmap/kuang"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100pt"
                                android:layout_height="75pt"
                                android:layout_centerInParent="true"
                                android:src="@drawable/fengnuan_kaiji" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="18pt"
                                android:includeFontPadding="false"
                                android:text="风暖"
                                android:textColor="#16A4DB"
                                android:textSize="23pt" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_shuinuan"
                            android:layout_width="192pt"
                            android:layout_height="192pt"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/kuang"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="109pt"
                                android:layout_height="49pt"
                                android:layout_centerInParent="true"
                                android:src="@drawable/shuinuan_kaiji3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="18pt"
                                android:includeFontPadding="false"
                                android:text="水暖"
                                android:textColor="#16A4DB"
                                android:textSize="23pt" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_kongtiao"
                            android:layout_width="192pt"
                            android:layout_height="192pt"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/kuang"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="110pt"
                                android:layout_height="60pt"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/img_air_conditioner_open" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="18pt"
                                android:includeFontPadding="false"
                                android:text="空调"
                                android:textColor="#16A4DB"
                                android:textSize="23pt" />
                        </RelativeLayout>
                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_shangcheng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="21pt"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </FrameLayout>
</LinearLayout>