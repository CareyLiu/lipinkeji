<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="331pt"
    android:layout_height="452pt"
    android:background="@drawable/bg_white_radius_7dp">


    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="match_parent"
        android:layout_height="331pt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="19pt"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:text="居安普妮智能门锁"
        android:textColor="@color/text_color_3"
        android:textSize="27pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_product" />

    <TextView
        android:id="@+id/tv_hongbao"
        android:layout_width="87dp"
        android:layout_height="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_red_shuangse"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="返¥50.00元红包"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="20pt"
        android:includeFontPadding="false"
        android:text="¥1588.00"
        android:textColor="#FFFC0100"
        android:textSize="31pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>